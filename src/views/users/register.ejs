<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: "Registro"}) %>
</head>
<body>
    <header>
        <%- include("../partials/header") %>
    </header>

    <main class="register">
        <section class="register">
            <h2>Registrarme</h2>

            <div class="row">
                <ul>
                    <li class="inicio"><a href="/usuarios/ingresar">Iniciar Sesión</a></li>
                    <li class="registro"><a href="#">Registrarme</a></li>
                </ul>     
            </div>

            <form action="/usuarios/registro" method="POST">
                <div class="datos">
                    <div class="fila-uno">
                        <div class="nombre">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" id="nombre">
                            <small> <%= (typeof errorNombre != 'undefined') ? errorNombre.msg : '' %>  </small>
                        </div>
                        <div class="apellido">
                            <label for="apellido">Apellido</label>
                            <input type="text" name="apellido" id="apellido">
                            <small> <%= (typeof errorApellido != 'undefined') ? errorApellido.msg : '' %>  </small>
                        </div>
                    </div>
                    <div class="fila-dos">
                        <div class="nacimiento">
                            <label for="nacimiento">Fecha de nacimiento</label>
                            <input type="date" name="nacimiento" id="nacimiento">
                            <small> <%= (typeof errorNacimiento != 'undefined') ? errorNacimiento.msg : '' %>  </small>
                        </div>
                        <div class="dni">
                            <label for="dni">DNI</label>
                            <input type="number" name="dni" id="dni">
                            <small> <%= (typeof errorDni != 'undefined') ? errorDni.msg : '' %>  </small>
                        </div>
                    </div>
                    <div class="fila-tres">
                        <div class="email">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email">
                            <small> <%= (typeof errorEmail != 'undefined') ? errorEmail.msg : '' %>  </small>  
                        </div>
                        <div class="confmail">
                            <label for="confEmail">Confirmar email</label>
                            <input type="email" name="confEmail" id="confEmail">
                            <small> <%= (typeof errorConfmail != 'undefined') ? errorConfmail.msg : '' %>  </small>
                        </div>
                    </div>
                    <div class="fila-cuatro">
                        <div class="pass">
                            <label for="pass">Contraseña</label>
                            <input type="password" name="pass" id="pass">
                            <small> <%= (typeof errorPass != 'undefined') ? errorPass.msg : '' %>  </small>
                        </div>
                        <div class="confpass">
                            <label for="confPass">Confirmar contraseña</label>
                            <input type="password" name="confPass" id="confPass">
                            <small> <%= (typeof errorConfpass != 'undefined') ? errorConfpass.msg : '' %>  </small>
                        </div>
                    </div>
                </div>
                <div class="fila-cinco"> 
                    <div class="tyc">                   
                        <input type="checkbox" name="TyC" value="si" id="TyC">
                        <label for="TyC"> Acepto las <a href="#">Políticas de Privacidad</a> y <a href="#">Términos y Condiciones</a></label>                                       
                    </div>    
                    <small class="errorTyC"> <%= (typeof errorTyC != 'undefined') ? errorTyC.msg : '' %>  </small>                   
                    <div class="suscripcion">
                        <input type="checkbox" name="suscripcion" value="si" id="suscripcion" checked>
                        <label for="suscripcion">Quiero recibir emails de promociones y noticias.</label>
                    </div>
                </div>                 
                
                <button type="submit">Crear mi cuenta</button>
            </form>
        </section>
    </main>

    <footer>
        <%- include("../partials/footer") %>
    </footer>
</body>
</html>