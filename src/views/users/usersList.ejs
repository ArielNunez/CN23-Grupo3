<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: "Usuarios"}) %>
</head>
<body>
    <header>
        <%- include("../partials/adminHeader") %>
    </header>

    <main class="listaUsuarios">        
        <nav>
            <%- include("../partials/adminNav") %>
        </nav>
        <section>
            <h2>Usuarios</h2>
            <table>
                <tr>
                    <th class="id">Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th class="email">Email</th>
                </tr>
                <% for (i = 0; i < users.length; i++) { %>
                <tr>
                    <td> <%= users[i].id %> </td>
                    <td> <%= users[i].name %> </td>
                    <td> <%= users[i].lastName %> </td>
                    <td> <%= users[i].email %> </td>
                </tr>                  
                <% } %> 
            </table>
        </section>
    </main>    
</body>
</html>